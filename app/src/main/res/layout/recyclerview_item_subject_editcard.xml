<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="5dp"
        app:contentPadding="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_subject_editcard_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTheme.PrimaryText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Subject" />

            <TextView
                android:id="@+id/item_subject_editcard_lbl_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Teacher: "
                android:textAppearance="@style/AppTheme.SecondaryText"
                app:layout_constraintStart_toStartOf="@+id/item_subject_editcard_subject"
                app:layout_constraintTop_toBottomOf="@+id/item_subject_editcard_subject" />

            <TextView
                android:id="@+id/item_subject_editcard_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_subject_editcard_lbl_teacher"
                app:layout_constraintTop_toTopOf="@+id/item_subject_editcard_lbl_teacher"
                tools:text="Teacher" />

            <TextView
                android:id="@+id/item_subject_editcard_lbl_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Category: "
                android:textAppearance="@style/AppTheme.SecondaryText"
                app:layout_constraintStart_toStartOf="@+id/item_subject_editcard_subject"
                app:layout_constraintTop_toBottomOf="@+id/item_subject_editcard_lbl_teacher" />

            <TextView
                android:id="@+id/item_subject_editcard_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/item_subject_editcard_lbl_category"
                app:layout_constraintTop_toTopOf="@+id/item_subject_editcard_lbl_category"
                tools:text="Category" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_subject_editcard_lbl_category">

                <Button
                    android:id="@+id/item_subject_editcard_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Edit"
                    android:theme="@style/SecondaryFlatButton" />

                <Button
                    android:id="@+id/item_subject_editcard_btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:theme="@style/PrimaryFlatButton" />

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>



